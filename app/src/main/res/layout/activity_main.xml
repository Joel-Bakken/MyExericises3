<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joelbakken.myexercises.ui.MainActivity">

    <ImageView
        android:id="@+id/mainPic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="woman doing yoga on a wodden beam"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mainpic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Welcome to MyExercises"
        android:fontFamily="casual"
        android:text="Welcome to MyExercises"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:contentDescription="click to log your latest exercises"
        android:text="Log Exercise"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginBottom="97dp"
        android:layout_above="@+id/locationEditText"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="View My Exercises"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/logButton"
        android:layout_alignBottom="@+id/logButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="About"
        android:textStyle="bold"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/viewButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/findFitnessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:text="Find Fitness Locations"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findFitnessButton"
        android:layout_alignEnd="@+id/findFitnessButton"
        android:ems="10"
        android:hint="Zip Code"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/savedFitnessButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/aboutButton"
        android:layout_toStartOf="@+id/viewButton"
        android:background="@android:color/holo_blue_light"
        android:text="My Saved Fitness Locations"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:visibility="visible" />


</RelativeLayout>
